{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "events:PutEvents",
        "events:DescribeRule",
        "events:DescribeEventBus",
        "events:CreateEventBus",
        "events:PutRule",
        "events:PutTargets"
      ],
      "Resource": "arn:aws:events:{{it.Region}}:{{it.AccountId}}:event-bus/{{it.EventBusName}}"
    }
  ]
}